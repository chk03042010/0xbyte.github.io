source "https://rubygems.org"

# Use GitHub Pages-approved gems
gem "github-pages", group: :jekyll_plugins

# Directly add Minimal Mistakes theme
gem "minimal-mistakes-jekyll"

# Optional: required for Windows timezone info
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Optional: better file watching on Windows
gem "wdm", "~> 0.1.1", platforms: [:mingw, :x64_mingw, :mswin]

